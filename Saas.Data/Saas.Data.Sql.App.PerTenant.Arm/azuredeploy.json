{
  "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "databaseServer": {
      "type": "string",
      "minLength": 1,
      "defaultValue": "contosodevsaas"
    },
    "databaseName": {
      "type": "string",
      "minLength": 1
    }
  },
  "variables": {
  },
  "resources": [
    {
      "name": "[concat(parameters('databaseServer'), '/', parameters('databaseName'))]",
      "type": "Microsoft.Sql/servers/databases",
      "location": "eastus",
      "apiVersion": "2014-04-01-preview",
      "tags": {
        "displayName": "Per Tenant"
      },
      "properties": {
        "collation": "SQL_Latin1_General_CP1_CI_AS",
        "edition": "Basic",
        "maxSizeBytes": "1073741824",
        "requestedServiceObjectiveName": "Basic"
      },
      "resources": [
        {
          "name": "import",
          "type": "extensions",
          "apiVersion": "2014-04-01-preview",
          "dependsOn": [
            "[resourceId('Microsoft.Sql/servers/databases', split(concat(parameters('databaseServer'), '/', parameters('databaseName')), '/')[0], split(concat(parameters('databaseServer'), '/', parameters('databaseName')), '/')[1])]"
          ],
          "tags": {
            "displayName": "import"
          },
          "properties": {
            "storageKeyType": "SharedAccessKey",
            "storageKey": "?",
            "storageUri": "https://contosodevstorageacct.blob.core.windows.net/bacpacs/wingtiptenantdb.bacpac",
            "administratorLogin": "contosoadmin",
            "administratorLoginPassword": "pass@word1",
            "operationMode": "Import"
          }
        }
      ]
    }
  ],
  "outputs": {
  }
}